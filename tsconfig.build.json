{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "lib": ["es2020", "DOM", "es2022"],
    "module": "ES2020", // (A)
    "moduleResolution": "Node", // (B)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["next-env.d.ts", "src"],
  "exclude": ["node_modules", "dist"]
}
